#!/usr/bin/env bash

set -eu

prgname=${0##*/}

_usage() {
    cat <<-EOF
	usage: $prgname [-H] [-P] ca_key pub_key identity principals [ssh-keygen opts]

	Generate SSH client/host certificate.
	Note: Multiple principals may be specified separated by commas.

	  -H    - generate host certificate
	  -P    - generate port-forwarding only certificate
	EOF
}
usage() { _usage; exit 0; }
usage_err() { _usage; exit 2; } >&2

declare -i host=0 portfwd=0
while getopts HPh opt; do
    case $opt in
        H)
            host=1
            ;;
        P)
            portfwd=1
            ;;
        h)
            usage
            ;;
        *)
            usage_err
            ;;
    esac
done
shift $((OPTIND-1))

(( $# < 4 )) && usage_err

# ----------------------------------------

ca_key=$1
pub_key=$2
identity=$3
principals=$4
shift 4

opts=(
    -s "$ca_key"
    -I "$identity"
    -n "$principals"
    -V +52w
)

if (( host )); then
    identity="host_$identity"
    opts+=(-h)
else
    identity="user_$identity"
    if (( portfwd )); then
        opts+=(
            -O no-agent-forwarding
            -O no-pty
            -O no-user-rc
            -O no-x11-forwarding
        )
    fi
fi

ssh-keygen "${opts[@]}" "$@" "$pub_key"
