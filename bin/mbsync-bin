#!/usr/bin/env bash

set -eu

(( $# )) || exit 2

name=$1
printf -v ts_beg '%(%s)T'

cleanup() {
    local retstat=$?
    local ts_end; printf -v ts_end '%(%s)T'
    printf 'exiting after %d minutes, %d seconds (%d)' \
        $(((ts_end-ts_beg)/60)) \
        $(((ts_end-ts_beg)%60)) \
        $retstat
    if (( retstat )); then
        notify -u critical "mbsync $name"
    fi
}
trap cleanup EXIT

cmd -H mbsync -q -c ~/.config/mbsyncrc "$1"
notmuch-on main +new
