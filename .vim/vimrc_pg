" vim: ft=vim fdm=marker

let vimrc = get(g:, 'vimrc', expand('<sfile>:p'))
let &rtp = expand('<sfile>:p:h')
unlet $BASEDIR

runtime vimrc_base

set buftype=nowrite
set colorcolumn=
set laststatus=1
set nobackup
set nolist
set noswapfile
set noundofile
set signcolumn=no
set synmaxcol=400
set tabstop=8
set virtualedit=all

let &viminfofile = $VIMDIR . '/.viminfo_pg'

" ----------------------------------------

filetype indent off

noremap <silent> r :Reload<CR>
noremap <silent> R :ReloadT<CR>
noremap <silent> F :ReloadT!<CR>

nnoremap <silent> q :QuitTab<CR>
nnoremap <silent> <C-A> :AnsiEsc<CR>

function! InitStdin() abort
    silent edit /dev/fd/8
    setl bt=nofile
    if !empty($PAGER_TITLE)
        file $PAGER_TITLE
    endif
    if $PRGNAME == 'manpg'
        setl ma noro
    elseif $PRGNAME != 'pg0'
        AnsiEsc
    endif
endfunction

function! InitPgx() abort
    setl ro noma
    exec '0System' $CMD
    AnsiEsc
    call utils#echo(utils#shortenCmdline(v:statusmsg))
endfunction

augroup vimrc_pg
    autocmd!
    if $PRGNAME == 'manpg'
        autocmd BufRead * silent! %!col -bx
    elseif $PRGNAME == 'pg0'
        autocmd BufRead * setl noml ft=
    endif
    autocmd BufRead * setl ro noma
augroup END
