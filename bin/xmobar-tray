#!/usr/bin/env bash

# See also: https://github.com/jaor/xmobar/issues/239#issuecomment-233206552

set -eu

prgname=${0##*/}

cachedir=~/.cache/$prgname
mkdir -p "$cachedir"

xprop -name panel -notype -spy 32c '\t$5\n' WM_NORMAL_HINTS |
    while read -r _ w; do
        (( w > 2 )) && (( w+=10 ))
        i=$cachedir/$w.xpm
        [[ -e $i ]] ||
            printf '! XPM2\n%d 1 1 1\n  c None\n%*s\n' "$w" "$w" '' >"$i"
        printf '<icon=%s/>\n' "$i"
    done
