#!/usr/bin/env bash

echo $'\n--------------------------------------------------'
echo $'> Lua packages:\n'

pkgs=(
    inspect
    mobdebug
)

for pkg in "${pkgs[@]}"; do
    luarocks --local install "$pkg"
done

echo '> luarocks --local list'
luarocks --local list

echo $'--------------------------------------------------'
echo $'> Node packages:\n'

pkgs=(
    js-beautify
    jshint
    learnyounode
    stream-adventure
)
npm -g install "${pkgs[@]}"

echo $'\n> npm -g list\n'
npm -g list

echo $'--------------------------------------------------'
echo $'> Python packages:\n'

pkgs=(
    when-changed
)
pipx install "${pkgs[@]}"

echo $'\n> pipx list\n'
pipx list

echo $'\n> pip list --user\n'
pip list --user

#echo $'\n--------------------------------------------------'
#echo $'> Ruby packages:\n'
#
#pkgs=(
#    ruby-beautify
#    sass
#    vpsfree-client
#)
#gem install --user-install "${pkgs[@]}"
#
#echo $'\n> gem list --local'
#gem list --local

echo $'\n--------------------------------------------------'
echo $'> Rust packages:\n'

pkgs=(
    rustfmt
)
cargo install "${pkgs[@]}"

echo $'\n> cargo install --list\n'
cargo install --list
echo
