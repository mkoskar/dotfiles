#!/usr/bin/env bash

set -eu -o pipefail

loghome='/var/log/local'
mkdir -p "$loghome"
cd "$loghome"

# ----------------------------------------

ts=$(date +%F.%s)
logbase='pacman-altered'
pacman-altered >"$logbase.$ts"

# ----------------------------------------

logs=("$logbase"*)
if (( ${#logs[@]} >= 2 )); then
    diff -U 0 "${logs[-2]}" "${logs[-1]}" | filterdiff --remove-timestamps
fi
