# vim: ft=conf

super + colon
    wmutil spawn sp:adm srun -sx term -n \{\} -g 180x48 trun tmux-session adm

super + semicolon ; super + semicolon
    wmutil spawn sp:mon srun -sx term -n \{\} -g 180x48 trun tmux-session mon

super + alt + {j,k}
    xdotool getwindowfocus windowmove --relative -- 0 {+,-}50

super + alt + {l,h}
    xdotool getwindowfocus windowmove --relative -- {+,-}50 0

super + {_,ctrl + ,shift + }y
    xdotool click --clearmodifiers {1,2,3}

super + minus
    wmutil warp_to_scr 1n

super + {u,i,o}
    wmutil warp_to_mon {--focused 1p, --primary, --focused 1n}

super + c
    xdotool getwindowfocus windowclose

# ----------------------------------------

super + R
    audio capture_toggle

super + S
    audio pa_sink_toggle

super + shift + {bracketleft,bracketright}
    audio playback_{down,up}

super + {M,N}
    audio playback_{_,dock_}toggle

super + {P,control + p}
    playctl {_,-b }play-pause

# ----------------------------------------

super + B
    backlight-toggle

super + F12
    measure | clip -i

super + Print
    sshot

super + p
    srun -sx dmenu_run

super + semicolon ; T
    touchpad toggle

super + semicolon ; b
    bluetooth-toggle

super + semicolon ; d
    dpms-toggle

super + semicolon ; i
    notify -u low "$(status)"

super + semicolon ; l
    sudo lock

super + semicolon ; r
    notify -u low "$(urlres)"

super + semicolon ; s
    selfie

super + semicolon ; t
    trackpoint-wheel toggle

super + semicolon ; w
    wifi-toggle

super + semicolon ; {m,M}
    {markx-url,markx}

super + semicolon ; {p,P}
    srun -sx playx{_,-menu}

super + semicolon ; {u,U}
    unicode -x select{ fav,_}

super + shift + Return
    srun -sx term

super + {F1,F2,F3}
    xkb {0,1,2}

super + {F9,F10,shift + F10}
    xscreen{_, -, mobile}

super + Insert
    clip

super + {_,shift + }apostrophe
    srun -sx bb{_, dd}

# ----------------------------------------

ctrl + grave
    dunstctl history-pop

ctrl + shift + space
    dunstctl close-all

ctrl + shift + period
    dunstctl context

XF86Display
    xscreen

XF86WebCam
    selfie

{XF86AudioNext,XF86AudioPrev,XF86AudioPlay,XF86AudioStop}
    playctl {next,prev,play-pause,stop}
