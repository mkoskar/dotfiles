#!/usr/bin/env bash

set -eu -o pipefail

glyph_count() {
    set -eu -o pipefail
    local file count
    while read -r file; do
        count=$(ftdump "$file" | awk '/glyph count:/ { print $3 }')
        printf '%5d %s\n' "$count" "$file"
    done
}
export -f glyph_count

if [[ ${1-} = - ]]; then
    fc-list --format '%{file}\n' |
        parallel --pipe --block 1K --round glyph_count |
        sort -r
    exit
fi

find_glyph() {
    local file
    while read -r file; do
        if ftdump -C -n "$file" | grep -qF "$1"; then
            printf '%s\n' "$file"
        fi
    done
}
export -f find_glyph

if [[ ${1-} = 0x* ]]; then
    fc-list --format '%{file}\n' |
        parallel --pipe --block 1K --round find_glyph "$1" |
        sort -r
    exit
fi

# ----------------------------------------

match() {
    set -eu
    local match
    case $1 in \>*)
        echo $'\n--------------------------------------------------'
        printf '%s\n\n' "$1"
        return
    esac
    match=$(fc-match "$1")
    printf '%-25s %s\n' "$1" "$match"
}
export -f match

grep -vxE '\s*|(\s*#.*)' <<-'EOF' | parallel -k match

	> Generic:
	cursive
	fantasy
	monospace
	sans-serif
	serif

	> PostScript:
	ITC Avant Garde Gothic
	ITC Bookman
	Courier
	Helvetica
	Helvetica Condensed
	New Century Schoolbook
	Palatino
	Symbol
	Times
	ITC Zapf Chancery
	ITC Zapf Dingbats

	> PostScript 3:
	Albertus
	Antique Olive
	Apple Chancery
	Arial
	Bodoni
	Carta
	Chicago
	Clarendon
	Cooper Black
	Copperplate Gothic
	Coronet
	Eurostile
	Geneva
	Gill Sans
	Goudy
	Helvetica Narrow
	Hoefler Text
	ITC Lubalin Graph
	ITC Mona Lisa Recut
	Joanna
	Letter Gothic
	Marigold
	Monaco
	New York
	Optima
	Oxford
	Stempel Garamond
	Tekton
	Times New Roman
	Univers
	Wingdings

	> Other:
	Andale Mono
	Arial Black
	Arial Narrow
	Avant Garde
	Book Antiqua
	Bookman
	Century Gothic
	Comic Sans MS
	Courier New
	Frutiger
	Futura
	Gadget
	Garamond
	Georgia
	Helvetica Neue
	Impact
	Palatino Linotype
	Trebuchet MS
	Verdana
	Webdings

EOF
echo
