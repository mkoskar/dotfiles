#!/usr/bin/env bash

set -eu -o pipefail

# shellcheck disable=SC2015
(( $# )) && set -- git "$@" || set -- :

handle() {
    set -eu
    local name=$1
    shift
    [[ ${withbar-} ]] && echo
    printf '\n> %s\n' "$name"
    cd "$name"
    "$@"
}
export -f handle

pargs=()
case ${2-} in
    clone | \
    f | \
    fetch | \
    pull | \
    push | \
    up | \
    update \
    )
        export withbar=1
        pargs+=(--bar)
        ;;
    *)
        pargs+=(-k)
        ;;
esac

trap echo EXIT

find . -mindepth 2 -maxdepth 2 -type d -name .git -printf '%h\0' |
    sort -z |
    parallel -rkq "${pargs[@]}" -0 handle {} "$@"
