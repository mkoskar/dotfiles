#!/usr/bin/env bash

set -eu

prgname=${0##*/}

_usage() {
    cat <<-EOF
	usage: $prgname [-e] [-d|-r|-s|-t]

	  -e    - restrict to explicitly installed packages
	  -d    - blame by "depends on"
	  -r    - blame by "required by"
	  -s    - blame by "install size" (default)
	  -t    - blame by "install date"
	EOF
}
usage() { _usage; exit 0; }
usage_err() { _usage; exit 2; } >&2

cmd="expac -H M '%w %m %n'"
sargs=(-k2,2nr)

declare -i explicit=0
while getopts 'edrsth' opt; do
    case $opt in
        e)
            explicit=1
            ;;
        d)
            cmd="expac '%w %n %E' | awk '{print \$1, NF - 2, \$2}'"
            ;;
        r)
            cmd="expac '%w %n %N' | awk '{print \$1, NF - 2, \$2}'"
            ;;
        s)
            ;;
        t)
            cmd="expac --timefmt='%F %T' '%w %l %n'"
            sargs=(-k2,3r)
            ;;
        h)
            usage
            ;;
        *)
            usage_err
            ;;
    esac
done
shift $((OPTIND-1))

# ----------------------------------------

eval "$cmd" | awk -v explicit=$explicit '
{
    $1=substr($1, 1, 1)
    if ($1 == "e" || !explicit) print $0
}
' | sort -s "${sargs[@]}"
