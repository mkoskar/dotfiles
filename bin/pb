#!/usr/bin/env bash

set -eu

prgname=${0##*/}

tmpdir=$(mktemp -d)
cleanup() { rm -rf "$tmpdir"; }
trap cleanup EXIT

(( $# )) || set -- -

infile=$1
if [[ $infile = - ]]; then
    infile=$tmpdir/in
    cat >"$infile"
fi
infile=$(realpath -- "$infile")
outfile=$tmpdir/out

[[ -s $infile ]] || exit 1

case ${PB:-0x0} in
    0x0)
        curl -sSLf -F file="@$infile" -o "$outfile" https://0x0.st/
        cat "$outfile"
        ;;
    ix)
        # /<id>/<lexer>#n-<line>
        curl -sSLf -F f:1="@$infile" -o "$outfile" http://ix.io/
        cat "$outfile"
        ;;
    rs)
        curl -sSLf --data-binary "@$infile" -o "$outfile" https://paste.rs/
        cat "$outfile"
        ;;
    *)
        exit 2
        ;;
esac

histfile=~/.local/share/pb_history
printf -v ts '%(%F.%s)T'

cat >>"$histfile" <<-EOF

	$ts $prgname [$*]
	--------------------------------------------------
EOF
cat "$outfile" >>"$histfile"
