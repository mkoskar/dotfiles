#!/usr/bin/env bash

set -eu -o pipefail

prgname=${0##*/}

_usage() {
    echo "usage: $prgname [file/name]"
}
usage() { _usage; exit 0; }
usage_err() { _usage; exit 2; } >&2

while getopts h opt; do
    case $opt in
        h) usage ;;
        *) usage_err ;;
    esac
done
shift $((OPTIND-1))

# ----------------------------------------

if (( ! $# )); then
    file=$(fc-list -f '%{file}\n' | sort -u | fuzz +m)
else
    file=$1
    if [[ ! -e $file ]]; then
        file=$(fc-match -f '%{file}' "$*")
    fi
fi

{
    echo $'\n--------------------------------------------------'
    echo $'> otfinfo\n'

    otfinfo -i "$file"
    echo

    echo $'--scripts\n'
    otfinfo -s "$file"
    echo

    echo $'--features\n'
    otfinfo -f "$file"

    echo $'\n--------------------------------------------------'
    echo $'> fc-query\n'

    fc-query "$file"

    echo '--------------------------------------------------'
    echo $'> ftdump\n'

    ftdump -C -n "$file" |
        awk '
            BEGIN { cmaps = 0 }
            /^charmaps/ { cmaps = 1 }
            cmaps && /\s+0x[0-9abcdef]+ =>/ {
                printf "%-60s : %c\n", $0, strtonum($1)
                next
            }
            { print }
        '
} |& $PAGER
