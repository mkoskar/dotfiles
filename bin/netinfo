#!/usr/bin/env bash

{
    exec 2>&1
    echo $'\n--------------------------------------------------'
    echo $'> ARP/NDISC cache:\n'

    ip neigh

    echo $'\n--------------------------------------------------'
    echo $'> Bridges:\n'

    bridge link

    echo $'\n--------------------------------------------------'
    echo $'> Addressing:\n'

    ip addr

    echo $'\n--------------------------------------------------'
    echo $'> Routing:\n'

    ip -d rule
    echo

    ip -d route
    echo

    ip -d -6 route
    echo
} |& $PAGER
