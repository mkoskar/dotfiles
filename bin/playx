#!/usr/bin/env bash

set -eu -o pipefail
shopt -s extglob

prgname=${0##*/}

cleanup() {
    local retstat=$? tmp
    if (( retstat )); then
        tmp=$(squash <<<"$src" | asciionly)
        (( ${#tmp} > 40 )) && tmp=${tmp:0:40}â€¦
        notify -u critical "$prgname $tmp"
    fi
}
trap cleanup EXIT

[[ -t 1 ]] || exec >/dev/null
[[ -t 2 ]] || exec 2>/dev/null

src=${1:-$(xclip -o | head -c 512)}
case $src in
    http?(s)://www.rtvs.sk/* | \
    http?(s)://www.ustream.tv/* \
        )
        printf -v title %q "$src"
        streamlink \
            --loglevel=error \
            --player-args="--title=$title --force-media-title=$title -- {filename}" \
            -- "$src"
        exit
        ;;
    http?(s)://*)
        mpv --player-operation-mode=pseudo-gui \
            --force-media-title="${2-}" -- "$src"
        ;;
    *)
        exit 2
        ;;
esac
