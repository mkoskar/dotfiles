#!/usr/bin/env bash

set -eu

prgname=${0##*/}

_usage() {
    cat <<-EOF
	usage: $prgname prompt [default]

	Simple confirmation dialog.
	EOF
}
usage() { _usage; exit 0; }
usage_err() { _usage; exit 2; } >&2

while getopts h opt; do
    case $opt in
        h) usage ;;
        *) usage_err ;;
    esac
done
shift $((OPTIND-1))

(( $# )) || usage_err

# ----------------------------------------

prompt=$1
default=${2-}

case $default in
    [yY])
        prompt="$prompt [Y/n]: "
        ;;
    [nN])
        prompt="$prompt [y/N]: "
        ;;
    *)
        prompt="$prompt [y/n]: "
        ;;
esac

while read -N1 -rsp "$prompt" sel; do
    [[ $sel != $'\n' ]] || sel=$default
    case $sel in
        [yY])
            echo y
            exit 0
            ;;
        [nN])
            echo n
            exit 1
            ;;
        *)
            echo
            ;;
    esac
done
