#!/usr/bin/env bash

# See also: fuseiso

set -eu

if (( EUID )); then
    echo 'This script must be run with root privileges.' >&2
    exit 1
fi

prgname=${0##*/}

# ----------------------------------------

devname='nbd0'
dev="/dev/$devname"

if [[ $prgname  = 'img-umount' ]]; then
    umountall "$devname"
    qemu-nbd -d "$dev"
    exit
fi

# ----------------------------------------

_usage() {
    echo "usage: $prgname image"
}
usage() { _usage; exit 0; }
usage_err() { _usage; exit 2; } >&2

while getopts 'h' opt; do
    case $opt in
        h)
            usage
            ;;
        *)
            usage_err
            ;;
    esac
done
shift $((OPTIND-1))

(( $# )) || usage_err

# ----------------------------------------

image=$1

modprobe nbd max_part=16
qemu-nbd -c "$dev" "$image"
lsblk "$dev"
