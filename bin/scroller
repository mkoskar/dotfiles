#!/usr/bin/env bash
#
# Scrolls through arguments or stdin lines if no arguments were passed.
# Current item is printed in the status line on stderr and send to stdout
# for further processing.
#
# Navigation:
#
#   q / Q       - quit
#   g / 0       - beginning
#   G / $       - end
#   k / K       - previous
#   (default)   - next

set -eu

if (( $# )); then
    items=("$@")
else
    readarray -t items
fi

exec </dev/tty

ti_col0=$(tput hpa 0) || ti_col0='\e[1G'
ti_clr_eol=$(tput el)

declare -i len=${#items[@]} i=0
while true; do
    (( len )) || break
    item=${items[i]}

    printf "${ti_col0}%s${ti_clr_eol}" "$((i+1)) : $item" >&2
    printf '%s\n' "$item"

    (( len > 1 )) || break
    read -rs -N 1 c </dev/tty
    case $c in
        [qQ])
            break
            ;;
        [g0])
            i=0
            ;;
        [G$])
            i=$((len-1))
            ;;
        [kK])
            i=$((i-1))
            ;;
        *)
            i=$((i+1))
            ;;
    esac
    (( i < 0 )) && i=$((len-1))
    (( i > len-1 )) && i=0
done
echo >&2
