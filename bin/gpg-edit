#!/usr/bin/env bash

set -eu -o pipefail

prgname=${0##*/}

if (( ! $# )); then
    echo "usage: $prgname file" >&2
    exit 2
fi

file=$(realpath -- "$1")

if [[ ! -f $file ]]; then
    echo 'regular file expected' >&2
    exit 1
fi

if [[ ${file%%\.gpg} = "$file" ]]; then
    echo 'should end with .gpg' >&2
    exit 1
fi

mode_expected=600

chmod "$mode_expected" "$file"
cp -af "$file" "$file".bak

egpg "$file" || true
chmod "$mode_expected" "$file"

mtime1=$(stat -c %Y "$file".bak)
mtime2=$(stat -c %Y "$file")

if (( mtime1 == mtime2 )); then
    echo 'not touched' >&2
    rm "$file".bak
else
    mkdir -p ~/archive/gpg-edit
    cp -af "$file".bak ~/archive/gpg-edit/"$mtime1.${file//\//%}"
    mv "$file".bak "$file".old
fi
