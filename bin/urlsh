#!/usr/bin/env bash

set -eu -o pipefail
shopt -s extglob

prgname=${0##*/}

tmpfile=$(mktemp)
cleanup() { rm -f "$tmpfile"; }
trap cleanup EXIT

src=${1:-$(clip -o | head -c 512)}
case $src in
    http?(s)://*)
        curl -qsSLf --form-string shorten="$src" -o "$tmpfile" https://0x0.st/
        cat "$tmpfile"
        ;;
    *)
        exit 2
        ;;
esac

histfile=~/.local/share/${prgname}_history
printf -v ts '%(%F %T)T'

cat >>"$histfile" <<-EOF

	[$ts] $prgname <$src>
	--------------------------------------------------
EOF
cat "$tmpfile" >>"$histfile"
