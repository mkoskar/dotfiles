#!/usr/bin/env bash

set -eu

for i in /sys/class/power_supply/${1:-*}; do
    [[ -r $i/type ]] || continue
    type=$(<"$i"/type)
    [[ $type = Battery ]] || continue

    echo $'\n--------------------------------------------------'
    printf '> %s\n\n' "$i"
    udevadm info -q property -p "$i"

    batcap=$(batcap "${i##*/}")
    printf '\nbatcap [%%]: %s\n' "$batcap"
done
echo
