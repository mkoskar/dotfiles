# PulseAudio
# ----------------------------------------
#
# See also:
#
#   /usr/share/doc/alsa-plugins/README-pulse

pcm.!pulse {
    type pulse
    fallback sysdefault
    hint {
        show {
            @func refer
            name defaults.namehint.basic
        }
        description "PulseAudio Sound Server"
    }
}

ctl.!pulse {
    type pulse
    fallback sysdefault
}


# JACK
# ----------------------------------------
#
# See also:
#
#   /usr/share/doc/alsa-plugins/README-jack

pcm.!jack {
    type jack
    playback_ports [
        system:playback_1
        system:playback_2
    ]
    capture_ports [
        system:capture_1
        system:capture_2
    ]
    hint {
        show {
            @func refer
            name defaults.namehint.basic
        }
        description "JACK Audio Connection Kit"
    }
}

# ----------------------------------------

defaults.namehint.basic on
defaults.namehint.extended on
defaults.namehint.showall on

pcm.!default pulse
ctl.!default pulse
