#!/usr/bin/env bash

set -eu

prgname=${0##*/}

cd ~/.cache/apod

case ${1-} in
    get)
        url=$(apodurl)
        curl -qsSLRf --create-dirs -o cur -z cur --url "$url"
        ;;
    set)
        [[ -e cur ]] || exit 0
        if has-wayland; then
            swaybg -c \#000000 -i cur -m fit
        elif has-x11; then
            feh --bg-max --no-fehbg cur
        else
            exit 1
        fi
        ;;
    *)
        echo "usage: $prgname {get | set}" >&2
        exit 2
        ;;
esac
