#!/usr/bin/env bash

set -eu -o pipefail

pid=${1:-$$}

[ "$pid" -gt 0 ] 2>/dev/null || {
    echo "usage: ${0##*/} pid" >&2
    exit 2
}

main() {
    ifile=/proc/$pid/environ
    [[ -e $ifile ]] || exit 1
    while IFS= read -r -d '' line; do
        #printf '%s\n' "${line@Q}"
        printf '%q\n' "$line"
    done <"$ifile"
}

if [[ -t 1 ]]; then
    main |& $PAGER
else
    main
fi
