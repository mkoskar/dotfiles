#!/usr/bin/env bash
#
# Wrapper script to use Vim as a pager.

set -eu -o pipefail

prgname=${0##*/}

run() {
    if [[ $prgname = manpg ]]; then
        export PAGER_TITLE=${MAN_PN-}
        args+=(-c 'setf man')
    fi
    if [[ ${PAGER_EX-} ]]; then
        args+=(-c "$PAGER_EX")
    fi
    args+=(-- "$@")
    export PRGNAME=$prgname
    exec -a "($prgname)" "${VIMBIN:-vim}" -NO -u ~/.vim/vimrc_pg "${args[@]}"
}

if [[ $prgname = pgx ]]; then
    if (( ! $# )); then
        echo "usage: $prgname cmd [arg]..." >&2
        exit 2
    fi
    if [[ ! -t 1 ]]; then
        printf -v cmd '%q "$@"' "$1"
        exec bashx -c "$cmd" "$@"
    fi
    CMD=$(shell-escape "$@")
    export CMD
    args=(-c 'call InitPgx()')
    run
    exit
fi

if [[ ! -t 1 ]]; then
    if [[ $prgname = manpg ]]; then
        cat "$@" | col -bx
    else
        cat "$@"
    fi
elif (( $# )) || [[ -t 0 ]]; then
    run "$@"
else
    exec 8<&0 0<&1
    export PAGER_TITLE=${PAGER_TITLE:--stdin-}
    args=(-c 'call InitStdin()')
    run
fi
