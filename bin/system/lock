#!/usr/bin/env bash
#
# Simple seat lock script with 'away' as backend.
#
# * disable SysRq
# * switch to VT 8
# * disable VT switching
# * run backend

set -eu

if (( EUID )); then
    echo 'This script must be run with root privileges.' >&2
    exit 1
fi

user=${1:-${SUDO_USER:-$USER}}

if [[ $user = root ]]; then
    echo 'Refusing to lock for root.' >&2
    exit 1
fi

export TERM=linux

# ----------------------------------------

vt=$(</sys/class/tty/tty0/active)
declare -i vtno=${vt##tty} vtno_new=8
vtnew=/dev/tty$vtno_new

exec <>$vtnew >&0 2>&1

sysrq_path=/proc/sys/kernel/sysrq
sysrq_old=$(<"$sysrq_path")
echo 0 >"$sysrq_path"

cleanup() {
    clear
    printf %d "$sysrq_old" >"$sysrq_path"
    vtswitch-lock -u
    chvt "$vtno"
}
trap cleanup EXIT

clear
tput civis

chvt "$vtno_new"
vtswitch-lock
chown -- "$user" $vtnew

runuser -c 'away -C away' - -- "$user"
read -rs
