#!/usr/bin/env bash

set -eu

cd ~

[[ -t 0 ]] && src=.ssh/ssh-agent.presets || src=/dev/stdin

declare -i retry=10
while true; do
    declare -i retstat=0
    ssh-add -l &>/dev/null || retstat=$?
    (( retstat )) || exit 0
    (( retstat == 2 )) || break
    (( --retry )) || exit 2
    sleep 0.2
done

while read -r -a args; do
    ssh-add "${args[@]}" </dev/tty
done <"$src"
