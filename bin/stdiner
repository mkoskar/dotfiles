#!/usr/bin/env bash

set -eu

prgname=${0##*/}

_usage() {
    cat <<-EOF
	usage: $prgname [-b] [-t] cmd [arg]..."

	Execute 'cmd [arg]...' with stdin reference replacing '{}' placehoder/s
	or as last dynamic argument if no '{}' placeholder was specified.

	  -b    - execute in background
	  -t    - temporary file is removed with some timeout
	EOF
}
usage() { _usage; exit 0; }
usage_err() { _usage; exit 2; } >&2

declare -i inbg=0 timeout=0
while getopts bth opt; do
    case $opt in
        b) inbg=1 ;;
        t) timeout=1 ;;
        h) usage ;;
        *) usage_err ;;
    esac
done
shift $((OPTIND-1))

(( $# )) || usage_err

# ----------------------------------------

if [[ -t 0 ]]; then
    echo 'stdin is a tty' >&2
    exit 1
fi

tmpfile=$(mktemp)
cleanup() { rm -f "$tmpfile"; }
trap cleanup EXIT

cat >"$tmpfile"
exec </dev/null

main() {
    unset replace_str
    [[ $* =~ \{\} ]] && replace_str=
    xargs -r -L1 ${replace_str+-I\{\}} "$@" <<<"$tmpfile"
    if (( timeout )); then
        (
            trap cleanup EXIT
            sleep 1m
            while fuser "$tmpfile"; do sleep 5; done
        ) &
        trap - EXIT
    fi
}

if (( inbg )); then
    (
        trap cleanup EXIT
        exec &>>~/.local/share/"$prgname".out
        main "$@"
    ) &
    trap - EXIT
else
    main "$@"
fi
