#!/usr/bin/env bash

set -eu

prgname=${0##*/}

_usage() {
    echo "usage: $prgname [-n name] [-g geometry] [cmd] [arg]..."
}
usage() { _usage; exit 0; }
usage_err() { _usage; exit 2; } >&2

while getopts n:g:eh opt; do
    case $opt in
        n) name=$OPTARG ;;
        g) geometry=$OPTARG ;;
        e) break ;;
        h) usage ;;
        *) usage_err ;;
    esac
done
shift $((OPTIND-1))

(( $# )) || set -- shell

# ----------------------------------------

bin=${TERMBIN:-urxvtc}
name=${name:-term}
unset SHLVL

case $bin in
    alacritty)
        exec "$bin" --class "$name" -e "$@"
        ;;
    kitty)
        exec "$bin" --name "$name" "$@"
        ;;
    st)
        exec "$bin" -n "$name" ${geometry:+-g "$geometry"} -e "$@"
        ;;
    termite)
        cmd=$(shell-escape "$@")
        exec "$bin" --name "$name" -e "$cmd"
        ;;
    urxvt | urxvtc)
        exec "$bin" -name "$name" ${geometry:+-geometry "$geometry"} -e "$@"
        ;;
    xterm)
        exec "$bin" -name "$name" ${geometry:+-geometry "$geometry"} -e "$@"
        ;;
    *)
        exit 2
        ;;
esac
