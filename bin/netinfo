#!/usr/bin/env bash

if (( ! $# )); then
    exec pgx netinfo -
fi

rt_tables() {
    ip -j route show table all | jq -r '.[].table' | sort -u
}

routes_by_table() {
    gawk -v family="$1" '
        /^\s+/ { print "  " $0; next }
        {
            match($0, /^(.*) table (\S+)(.*)$/, m)
            if (table != m[2]) {
                if (table) printf "\n"
                printf "%s table %s\n", family, m[2]
                table = m[2]
            }
            print "  " m[1] m[3]
        }
    '
}

{
    printf '#\x20vim: ft=netinfo'
    echo $'\n--------------------------------------------------'
    echo $'> Addressing:\n'

    ip -d addr

    echo $'\n--------------------------------------------------'
    echo $'> Routing:\n'

    ip -d rule
    echo

    ip -d -4 route show table all | routes_by_table inet
    echo

    ip -d -6 route show table all | routes_by_table inet6

    echo $'\n--------------------------------------------------'
    echo $'> ARP/NDISC cache:\n'

    ip neigh
    echo

} |& $PAGER
