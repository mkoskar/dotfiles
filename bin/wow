#!/usr/bin/env bash

set -eu -o pipefail

cd ~/projects/notes/src/09-policy

output() {
    local files=([0-9]*)
    local count=${#files[@]}
    for i in "${!files[@]}"; do
        cat "${files[i]}"
        (( i == count-1 )) || echo
    done
}

output | PAGER_TITLE='Words Of Wisdom' PAGER_EX='set ft=rst fdm=marker' pg0
