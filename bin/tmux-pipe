#!/usr/bin/env bash
#
# Example usage (in ~/.tmux.conf):
#
#   bind u run -b 'tmux-pipe #{pane_height} #{scroll_position} | urls -o'
#   bind U run -b 'tmux-pipe | urls -o'

unset s e
declare -i s e h p

if (( $# )); then
    (( h=$1, p=${2:-0}, s=-p, e=s+h-1 ))
fi

tmux capture-pane -pJ -S "${s:--}" -E "${e:--}"
